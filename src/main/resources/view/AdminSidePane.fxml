<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" prefHeight="650.0" prefWidth="712.0" style="-fx-background-color: #F4F6F9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse.controller.AdminSidePaneController">
   <children>
      <VBox prefHeight="650.0" prefWidth="712.0" spacing="15">
         <children>
            <!-- Header Section -->
            <HBox alignment="CENTER" prefHeight="54.0" prefWidth="712.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-padding: 10;">
               <children>
                  <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Therapist Performance Dashboard" />
               </children>
            </HBox>

            <!-- Performance Charts Section -->
            <HBox alignment="CENTER" prefHeight="283.0" prefWidth="713.0" spacing="15">
               <children>
                  <AreaChart fx:id="GraphTherapyPerform" prefHeight="278.0" prefWidth="664.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10;">
                     <xAxis>
                        <CategoryAxis fx:id="XTherapistPerform" side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis fx:id="YAxisTherapistPerform" side="LEFT" />
                     </yAxis>
                  </AreaChart>
               </children>
            </HBox>

            <!-- Detailed Analytics Section -->
            <HBox prefHeight="284.0" prefWidth="713.0" spacing="20">
               <children>
                  <!-- Therapy Session Statistics -->
                  <VBox alignment="CENTER" prefHeight="284.0" prefWidth="424.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-padding: 10;">
                     <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Therapy Session Statistics" />
                        <LineChart fx:id="GraphTherapySession" prefHeight="260.0" prefWidth="416.0">
                           <xAxis>
                              <CategoryAxis fx:id="XTherapySession" side="BOTTOM" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis fx:id="YTherapySession" side="LEFT" />
                           </yAxis>
                        </LineChart>
                     </children>
                  </VBox>

                  <!-- Quick Action Panels -->
                  <VBox alignment="CENTER" prefHeight="284.0" prefWidth="259.0" spacing="15">
                     <children>
                        <!-- Icon Panels -->
                        <HBox alignment="CENTER" prefHeight="82.0" prefWidth="269.0" spacing="10">
                           <children>
                              <Pane fx:id="PaneTherapist" onMouseClicked="#PaneTherapistOnAction" prefHeight="100.0" prefWidth="82.0" style="-fx-background-color: #3498DB;                                            -fx-background-radius: 15;                                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
                                 <children>
                                    <ImageView fitHeight="39.0" fitWidth="39.0" layoutX="11.0" layoutY="14.0">
                                       <image>
                                          <Image url="@../assets/icons8-doctor-50.png" />
                                       </image>
                                    </ImageView>
                                    <Label layoutY="53.0" style="-fx-text-fill: white;" text="Therapists" />
                                 </children>
                              </Pane>

                              <Pane fx:id="PanePatient" onMouseClicked="#PanePatientOnAction" prefHeight="100.0" prefWidth="82.0" style="-fx-background-color: #3498DB;                                            -fx-background-radius: 15;                                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
                                 <children>
                                    <ImageView fitHeight="39.0" fitWidth="39.0" layoutX="11.0" layoutY="14.0">
                                       <image>
                                          <Image url="@../assets/icons8-patient-64.png" />
                                       </image>
                                    </ImageView>
                                    <Label layoutX="9.0" layoutY="53.0" style="-fx-text-fill: white;" text="Patients" />
                                 </children>
                              </Pane>

                              <Pane fx:id="PaneUser" onMouseClicked="#PaneUserOnAction" prefHeight="100.0" prefWidth="82.0" style="-fx-background-color: #3498DB;                                            -fx-background-radius: 15;                                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
                                 <children>
                                    <ImageView fitHeight="39.0" fitWidth="39.0" layoutX="9.0" layoutY="14.0">
                                       <image>
                                          <Image url="@../assets/icons8-user-50.png" />
                                       </image>
                                    </ImageView>
                                    <Label layoutX="16.0" layoutY="53.0" style="-fx-text-fill: white;" text="Users" />
                                 </children>
                              </Pane>

                              <Pane fx:id="PaneProgram" onMouseClicked="#PaneProgramOnAction" prefHeight="100.0" prefWidth="82.0" style="-fx-background-color: #3498DB;                                            -fx-background-radius: 15;                                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);">
                                 <children>
                                    <ImageView fitHeight="39.0" fitWidth="39.0" layoutX="11.0" layoutY="14.0">
                                       <image>
                                          <Image url="@../assets/icons8-program-48.png" />
                                       </image>
                                    </ImageView>
                                    <Label layoutX="5.0" layoutY="53.0" style="-fx-text-fill: white;" text="Programs" />
                                 </children>
                              </Pane>
                           </children>
                        </HBox>

                        <!-- Action Buttons -->
                        <Button fx:id="BtnTrackPayments" onAction="#BtnTrackPaymentsOnAction" prefHeight="36.0" prefWidth="193.0" style="-fx-background-color: #FFFFFF;                                        -fx-text-fill: #3498DB;                                        -fx-border-color: #3498DB;                                        -fx-border-radius: 20;                                        -fx-background-radius: 20;                                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);" text="Track Payments" />

                        <Button fx:id="BtnFinacialReport" onAction="#BtnFinacialReportOnAction" prefHeight="36.0" prefWidth="193.0" style="-fx-background-color: #FFFFFF;                                        -fx-text-fill: #3498DB;                                        -fx-border-color: #3498DB;                                        -fx-border-radius: 20;                                        -fx-background-radius: 20;                                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);" text="Financial Report" />

                        <Button fx:id="BtnPatientTherapyHistory" onAction="#BtnPatientTherapyHistoryOnAction" prefHeight="36.0" prefWidth="193.0" style="-fx-background-color: #FFFFFF;                                        -fx-text-fill: #3498DB;                                        -fx-border-color: #3498DB;                                        -fx-border-radius: 20;                                        -fx-background-radius: 20;                                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);" text="Patient Therapy History" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
